<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hipo.prop.app.axel.com.eva1_9_practicaa2.Principal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <TextView
            android:text="Año de nacimiento:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtxtAñoNac"
            android:layout_weight="1"
            android:maxLength="4"
            android:hint="ej: 1995" />
    </LinearLayout>

    <TextView
        android:text="Region de nacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdgpRegion">

        <RadioButton
            android:text="Regiones desarrolladas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnDesarrolladas"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="América Latina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnAmerica"
            android:layout_weight="1" />

        <RadioButton
            android:text="Asia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnAsia"
            android:layout_weight="1" />

        <RadioButton
            android:text="Africa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnAfrica"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/rdgpGenero"
        android:layout_height="wrap_content" >

        <RadioButton
            android:text="Hombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnHombre"
            android:layout_weight="1" />

        <RadioButton
            android:text="Mujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbtnMujer"
            android:layout_weight="1" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Expectativa de vida:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="1" />

        <TextView
            android:text="Vida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtExpectativa"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Fecha probable de deceso:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Deceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDeceso"
            android:layout_weight="2.77" />
    </LinearLayout>

</LinearLayout>
